@model GradeViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Information</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Student Grade</h2>
                <div class="form-group">
                    <label for="studentName">Student Name :</label>
                    <input type="text" class="form-control" id="studentName" value="@Model.Student.FirstName @Model.Student.LastName" readonly>
                </div>
                <div class="form-group">
                    <label for="studentName">Student Email :</label>
                    <input type="text" class="form-control" id="studentName" value="@Model.Student.Email" readonly>
                </div>
                <div class="form-group">
                    <label for="studentGrade">Student Grade :</label>
                    <input type="text" class="form-control" id="studentGrade" value="@Model.Grade" readonly>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
